<div class="container">
	<div class="login-container">
    <div id="output"></div>
    <div class="avatar">
      <img src="https://cdn3.iconfinder.com/data/icons/ageing-society-2/512/Caregiving-application-health-ageingsociety-healthcare-128.png">
    </div>
    <div class="form-box">
      <%= render 'shared/notice', notice: notice %>
      <h5>Pocket Health System</h5>
      <% if current_user %>
        <div class="alert alert-success" role="alert">
          Welcome <%= current_user.username %>.
        </div>
        <%= link_to 'Log Out', sign_out_path %>
      <% else %>
        <span class='links'>
          <%= link_to 'Sign In', sign_in_path %> or
          <%= link_to 'Sign Up', sign_up_path %>
        </span>
      <% end %>
    </div>
  </div>
</div>